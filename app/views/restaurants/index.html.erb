<div class="navbar">
<h1>Yelp</h1>
<%= link_to 'Add a restaurant', new_restaurant_path(@restaurant) %>
</div>

<div class="container">
<h1>Restaurants</h1>
<div class='column'>
  <% @restaurants.each do |restaurant| %>
  <div class='card'>
    <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
      <p><%=restaurant.category.capitalize%></p>
      <p><%=restaurant.address%></p>
      <%= link_to "Leave a review", new_restaurant_review_path(restaurant) %>
    </div>
    <% end %>
</div>
</div>
